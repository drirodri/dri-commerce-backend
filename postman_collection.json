        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('accessToken', response.token);",
                  "    console.log('✅ Access token renovado:', response.token.substring(0, 20) + '...');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}{{authPath}}/refresh",
              "host": ["{{baseUrl}}{{authPath}}"],
              "path": ["refresh"]
            },
            "description": "Renova o access token usando um refresh token válido. Execute o Login primeiro para obter um refresh token."
          },
          "response": []
