      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('accessToken', response.token);",
                  "    pm.environment.set('refreshToken', response.refreshToken);",
                  "    pm.environment.set('tokenType', response.tokenType);",
                  "    console.log('✅ Tokens salvos no ambiente');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"joao.silva@email.com\",\n  \"password\": \"SenhaForte@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}{{authPath}}/login",
              "host": ["{{baseUrl}}{{authPath}}"],
              "path": ["login"]
            },
            "description": "Autentica usuário e retorna tokens JWT (access token e refresh token)"
          },
          "response": []
        },
